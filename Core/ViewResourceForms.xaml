    <DataTemplate x:Key="ToolVMTemplate">
        <StackPanel>
            <TextBlock Text="Object"/>
            <TextBlock Text="{Binding Title}"/>
        </StackPanel>
    </DataTemplate>


    <DataTemplate x:Key="DocumentVMTemplate">
        <StackPanel>
            <TextBlock Text="{Binding}"/>
            <TextBlock Text="{Binding ContentID}"/>
        </StackPanel>
    </DataTemplate>



</ResourceDictionary>